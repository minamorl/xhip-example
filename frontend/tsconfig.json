{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true,
    "jsx": "react",
    "types": [
      "node"
    ],
    "typeRoots": [
      "../node_modules",
      "../node_modules/@types"
    ]
  },
  "compileOnSave": false
}
